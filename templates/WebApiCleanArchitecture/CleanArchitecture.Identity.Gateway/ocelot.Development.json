{
  "Routes": [
    {
      "UpstreamPathTemplate": "/svc/User/{url}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      },
      "DownstreamPathTemplate": "/api/User/{url}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5232
        }
      ],
      //"AddHeadersToRequest": {
      //  "uniquename": "Claims[unique_name] > value"
      //},
      "UpstreamHeaderTransform": {
        "custom-key": "identity.gateway"
      },
      "DownstreamHeaderTransform": {
        "trace-id": "Trace-Id"
      },
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "gw"
      }
      //"DelegatingHandlers": [
      //  "CustomResultHandler"
      //]
    },
    {
      "UpstreamPathTemplate": "/svc/WeatherForecast/{url}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      },
      "DownstreamPathTemplate": "/api/WeatherForecast/{url}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5232
        }
      ],
      "UpstreamHeaderTransform": {
        "custom-key": "identity.gateway"
      },
      "DownstreamHeaderTransform": {
        "trace-id": "Trace-Id"
      }
      //"DelegatingHandlers": [
      //  "CustomResultHandler"
      //]
    },
    // identity-svc-swagger
    {
      "UpstreamPathTemplate": "/identity-svc/swagger/swagger.json",
      "UpstreamHttpMethod": [ "GET" ],
      "DownstreamPathTemplate": "/swagger/v1/swagger.json",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5232
        }
      ],
      "LoadBalancer": "RoundRobin"
    }

  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:9090"
  }
}